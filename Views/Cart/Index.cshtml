@model List<Product>

<h2 class="text-center my-4">Shopping Cart</h2>

<div class="container">
    <div class="row">
        @if (Model.Count == 0)
        {
            <div class="text-center">
                <p class="lead">Your cart is empty.</p>
                <a class="btn btn-primary" asp-controller="Product" asp-action="Index">Go Shopping</a>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                ViewData["IsCart"] = true;
                <partial name="_ProductCard" model="item" />
            }
        }
    </div>

    @if (Model.Count > 0)
    {
        <div class="text-center mt-4">
            <h4>Total: <strong>$@ViewBag.TotalPrice</strong></h4>
            <a class="btn btn-success" href="#">Proceed to Checkout</a>
        </div>
    }
</div>