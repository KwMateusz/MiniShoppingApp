<div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100">
        <div class="d-flex align-items-center justify-content-center" style="height: 200px;">
            <img src="@Model.Image" class="product-img" alt="@Model.Title">
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text text-muted">@Model.Category</p>
                <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
            </div>
            <div>
                @if (ViewData["IsCart"] as bool? == true)
                {
                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="productId" value="@Model.Id"/>
                        <button type="submit" class="btn btn-danger w-100">Remove</button>
                    </form>
                }
                else
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.Id"/>
                        <button type="button" class="btn btn-primary w-100 add-to-cart" data-product-id="@Model.Id">
                            Add to Cart
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>