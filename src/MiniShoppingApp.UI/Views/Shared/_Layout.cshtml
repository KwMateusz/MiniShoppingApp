<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mini Shop</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <!-- Clicking 'Mini Shop' redirects to Product page -->
        <a class="navbar-brand" asp-controller="Product" asp-action="Index">Mini Shop</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">Products</a>
                </li>
            </ul>

            <!-- Cart Icon (right side) -->
            <a asp-controller="Cart" asp-action="Index" class="nav-link position-relative">
                <i id="cart-icon" class="bi bi-cart fs-4 text-white"></i>
                <span id="cart-count" class="position-absolute top-100 start-100 translate-middle badge rounded-pill bg-danger d-none">
                    0
                </span>
            </a>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @RenderBody()
</div>

<!-- Bootstrap & Custom JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>

</body>
</html>