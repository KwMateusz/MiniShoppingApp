<div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100">
        <div class="d-flex align-items-center justify-content-center" style="height: 200px;">
            <img src="@Model.Image" class="product-img" alt="@Model.Title">
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text text-muted">@Model.Category</p>
                <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
            </div>
            <div class="d-flex justify-content-center">
                <!-- Container for dynamic cart buttons -->
                <div id="cart-controls-@Model.Id" class="w-100">
                    <button class="btn btn-primary w-100 add-to-cart" data-product-id="@Model.Id">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</div>